--Display all items in the database
SELECT * FROM gothreads;

--Display all items in the database by descending price
SELECT * FROM gothreads ORDER BY price desc;

--Display the sum of all items from the database
SELECT SUM (price) FROM gothreads;

--Display the highest price from all items in the database
SELECT MAX (price) FROM gothreads;

--Display the average price of all items in the database
SELECT AVG (price) FROM gothreads;

